extends layout

block content
  h1= title
  p Rows: #{query.rows}, Columns: #{query.cols}
  - var rw = Number(query.rows);
  - var cl = Number(query.cols);
  if !Number.isInteger(rw)
      p  Input is Invalid. NAN
  else if !Number.isInteger(cl)
      p  Input is Invalid. NAN
  else if rw < 1 || rw > 10
      p  Input is Invalid.enter between 1 and 10 .
  else if cl < 1 || cl > 10
      p  Input is Invalid.enter between 1 and 10 .
  else
    table#outer
      - for (let a = 0; a < rw; a++)
        tr#middle
          - for (let b = 0; b < cl; b++)
            - if (a == b)
              td= 1
            - else if (a == b + 1)
              td= 2
            - else if (a == b - 1)
              td= a
            - else
              td= 0