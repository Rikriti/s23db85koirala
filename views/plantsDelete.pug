extends layout

block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
  - let plantsid = toShow._id
  - let Name = toShow.name
  - let Category = toShow.category
  - let Price = toShow.price
    - let actionid = "/resource/plants/" + plantsid
    script.
      let actionid = "#{actionid}"
    div
      div.row
        div(class='costumeAttr mr-3') Plants ID is:
        div #{plantsid}
      div.row
        div(class='costumeAttr mr-3')  Name is:
        div #{name}
      div.row
        div(class='costumeAttr mr-3') Category is:
        div #{category}
      div.row
        div(class='costumeAttr mr-3') Price is:
        div #{price}
      button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
      button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
    script.
      function cancel() {
        // Go back to the home page for the costume collection
        window.location.href='/plants'
      }
    script.
      function deleteOnid() {
        console.log("starting delete")
        // delete first
        fetch(actionid, {
          method: 'DELETE' // Don't need a body for the delete
        }).then((resp) => {
          return resp.json(); // or resp.text() or whatever the server sends
        }).then((body) => {
          alert("Delete succeeded")
          window.location.href='/plants'
          // TODO handle body
        }).catch((error) => {
          // TODO handle error
          alert("Delete failed " + error)
        });
      }