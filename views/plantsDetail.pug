extends layout

block content
  h1(class='detailh1')= title

  - let plantsid = toShow._id
  - let name = toShow.name
  - let category = toShow.category
  - let price = toShow.price 

  div
    div.row
      div(class='costumeAttr') Plant ID is: #{plantsid} 
    div.row
      div(class='costumeAttr') Plant name is: #{name}
    div.row
      div(class='costumeAttr') Plant Category is: #{category} 
    div.row
      div(class='costumeAttr') Plant price is: #{price}






