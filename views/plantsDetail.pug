extends layout
block content
  h1= title

  - let plantsid = toShow._id
  - let name = toShow.name
  - let category = toShow.category
  - let price = toShow.price 

  div
    div.row
      div(class='costumeAttr mr-3') Plant ID is:
        div #{plantsid}  
    div.row
      div(class='costumeAttr mr-3') Plant is:
        div #{name}
    div.row
      div(class='costumeAttr mr-3') Plant marks is:
        div #{category}  
    div.row
      div(class='costumeAttr mr-3') Plant course is:
        div #{price}
  