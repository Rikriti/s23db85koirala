extends layout

block content
  h1= title
   script.
    function buy(index) {
      alert("You purchased item " + index);
    }

  .container-fluid
    .row  
      -
        let elephants = [
          { elephantName: 'Jake', elephantOrigin: "Brazil", elephantPrice: 500},
          { elephantName: 'Rob', elephantOrigin: 'Africa', elephantPrice: 750},
          { elephantName: 'Bettie', elephantOrigin: 'Thailand', elephantPrice: 600}
        ]
      
      each elephant, index in elephants
       div.row
        div.col-sm-2(onclick="buy(" + index + ")")
            h3 Name: #{elephant.elephantName}
            p Elephant Origin: #{elephant.elephantOrigin}
            p Elephant Price: #{elephant.elephantPrice}

  